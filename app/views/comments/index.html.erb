<h3><%= notice %></h3>

<h1>Listing Comments</h1><br>
<%= @comments.count %> Records<br><br>

<table border='1' style='border-collapse:collapse'>
    <thead>
        <tr>
            <th>Creation Date</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.name %></td>
                <td><%= comment.description %></td>
                <td><%= link_to 'View', comment_path(comment) %></td>
                <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
                <td><%= button_to 'Delete', comment_path(comment), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>

</table>