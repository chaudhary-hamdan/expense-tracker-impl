

<h1>Listing Employees</h1><br>
<%= @employees.count %> Records<br><br>
<%# link_to 'Dashboard', dashboard_path %><br><br><br>
<%= link_to 'New Employee', new_employee_path %>
<br><br>

<table border='1' style='border-collapse:collapse'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Employment Status</th>
            <th>Department</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= employee.employment_status %></td>
                <td><%= employee.department %></td>
                <td><%= link_to 'View Employee Details, his Expense Reports and Expenses', employee_path(employee) %></td>
                <td><%= link_to 'Edit Employee Details', edit_employee_path(employee) %></td>
                <td><%= button_to 'Delete Employee', employee_path(employee), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>

</table>


